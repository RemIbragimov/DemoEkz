<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400" MinHeight="300" MinWidth="400" Icon="/icon.ico">
    <Grid>
        <StackPanel>
            <TextBlock Text="Логин:"/>
        <TextBox x:Name="txtLogin"/>

        <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="txtPassword"/>

            <Button Content="Войти" Click="Login_Click"/>
        <TextBlock Text="или" HorizontalAlignment="Center"/>
        <Button Content="Войти как гость" Click="LoginAsGuest_Click"/>
        </StackPanel>
    </Grid>
</Window>
