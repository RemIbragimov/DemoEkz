<Window x:Class="Demo.CPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Капча" Height="300" Width="400" MinHeight="300" MinWidth="400" Icon="/icon.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Height="100" Width="300" x:Name="captcha"></Image>
            <Label></Label>
            <Button Content="Обновить" Height="30" Width="200" Click="RefreshCaptcha"/>
            <Label></Label>
            <TextBox x:Name="captchaInput" />
            <Label></Label>
            <Button Content="Проверить капчу" Height="30" Width="200" x:Name="CheckCaptcha" Click="CheckCaptcha_Click"/>
        </StackPanel>
    </Grid>
</Window>
